{
    "manifest_version": 3,
    "name": "Focus Productivity Tracker",
    "version": "1.0",
    "description": "Track time spent on websites and restrict distracting sites.",
    "permissions": [
      "tabs", 
      "storage", 
      "activeTab", 
      "alarms",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "https://*/*", 
      "http://*/*"
    ]
  }
  